.row(class='bg-white py-5 px-4 border-end vh-100 rounded-bottom-left-0 rounded-bottom-left-lg-3' style='max-height: calc(100vh - 7.5rem)')
  .col(class='p-0')
    h2(class='fw-bold mb-4') Чаты
    form
      div(class='border-0 border-bottom mb-5')
        input(type='search' class='form-control border-0 shadow-none p-4' placeholder='Поиск по сообщениям')
    each contact in contacts
      a(href='chat.html' class='link-hover'): div(class='d-flex align-items-center shadow-sm px-3 mb-3 gap-4')
        img(src= contact.avatar class='rounded-circle' style ='width: 50px; height: 50px')
        div(class='d-flex flex-column overflow-x-hidden my-4' style='width: 72%')
          div(class='d-flex justify-content-between')
            p(class='fw-bold mb-0')= contact.name
            p(class='contact-hover small mb-0')= contact.time
          p(class='contact-hover small mb-0 overflow-x-hidden' style='white-space: nowrap; text-overflow: ellipsis')= contact.message